<?xml version="1.0"?>
<PropertyList>
    <path>ja37_fuel.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>FuelGlass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>Gauge</object-name>
    </effect>

    <!--effect>
	<inherits-from>Effect/model-combined-deferred</inherits-from>
	<parameters>
		<texture n="1">
			<image>fuel_gauge_lm.png</image>
		</texture>
		<condition><use>/controls/lighting/logo-lights</use></condition>
		<factor><use>/controls/lighting/panel-norm</use></factor >
	</parameters>
 	<object-name>Gauge</object-name> 
</effect -->

    <animation>
        <type>pick</type>
        <object-name>FuelGlass</object-name>
        <object-name>Gauge</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-main-voltage</property>
                <value>150</value>
            </greater-than>
        </condition>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>fuel</tooltip-id>
                <label>Fuel: %3d lbs</label>
                <property>/consumables/fuel/total-fuel-lbs</property>
            </binding>
        </hovered>
    </animation>


    <animation>
        <type>material</type>
        <object-name>Needle_B</object-name>
        <object-name>Needle_F</object-name>
        <object-name>Plane</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Needle_B</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-main-voltage</property>
                <value>150</value>
            </greater-than>
        </condition>
        <property>/instrumentation/fuel/needleB_rot</property>
        <max>325</max>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Needle_F</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-main-voltage</property>
                <value>150</value>
            </greater-than>
        </condition>
        <property>/instrumentation/fuel/needleF_rot</property>
        <max>325</max>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>


</PropertyList>
