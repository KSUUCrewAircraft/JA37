<?xml version="1.0"?>

<PropertyList>
    <path>green-indicator.ac</path>

    <animation>
        <type>material</type>
        <object-name>Circle</object-name>
        <emission>
            <red>0.0</red>
            <green>1.0</green>
            <blue>0.0</blue>
            <factor-prop>/instrumentation/attitude-indicator</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Circle</object-name>
        <property>/instrumentation/attitude-indicator</property>
        <factor>0.5</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Circle</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Attitude Indicator</tooltip-id>
                <label>Automatic Attitude</label>
                <property>/instrumentation/attitude-indicator</property>
            </binding>
        </hovered>
    </animation>


</PropertyList>
