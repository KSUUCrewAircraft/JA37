<?xml version="1.0"?>

<PropertyList>
    <path>red-indicator.ac</path>

    <animation>
        <type>material</type>
        <object-name>Circle</object-name>
        <emission>
            <red>1.0</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>fdm/jsbsim/propulsion/engine/cutoff-ready</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>scale</type>
        <object-name>Circle</object-name>
        <x-offset>0.50</x-offset>
        <y-offset>0.50</y-offset>
        <z-offset>0.50</z-offset>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Circle</object-name>
        <property>fdm/jsbsim/propulsion/engine/cutoff-ready</property>
        <factor>0.5</factor>
        <axis>
            <x>1</x>
            <y>0</y>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>Circle</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>cutoff Indicator</tooltip-id>
                <label>Ready for cutoff indicator</label>
            </binding>
        </hovered>
    </animation>


</PropertyList>
