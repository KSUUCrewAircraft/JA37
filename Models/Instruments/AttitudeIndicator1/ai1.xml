<?xml version="1.0"?>
<PropertyList>

    <path>ai1.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glassAI1</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>ai-ring</object-name>
        <object-name>CLOCK_mount</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>sphere</object-name>
        <object-name>bank-index</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Primary Attitude Indicator</tooltip-id>
                <label>Pitch: %3d°</label>
                <property>orientation/pitch-deg</property>
            </binding>
        </hovered>
    </animation>


    <animation>
        <type>material</type>
        <object-name>sphere</object-name>
        <object-name>bank-index</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>sphere</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
        <center>
            <x-m>-0.02692</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>sphere</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
        <center>
            <x-m>-0.02692</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>bank-index</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
        <axis>
            <x>1</x>
        </axis>
    </animation>


</PropertyList>
