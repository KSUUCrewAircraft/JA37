<?xml version="1.0"?>
<PropertyList>

    <path>secai.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>AI2Glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>AI2Cube</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>AI2Cube</object-name>
        <object-name>AI2Glass</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Secondary Attitude Indicator</tooltip-id>
                <label>Roll: %3d°</label>
                <property>orientation/roll-deg</property>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>material</type>
        <object-name>AI2Cylinder</object-name>
        <object-name>AI2Pointer</object-name>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AI2Cylinder</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>orientation/roll-deg</property>
        <center>
            <x-m>-0.02522</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AI2Pointer</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>orientation/roll-deg</property>
        <center>
            <x-m>-0.02522</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>AI2Cylinder</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/ac-instr-voltage</property>
                <value>100</value>
            </greater-than>
        </condition>
        <property>orientation/pitch-deg</property>
        <factor>2</factor>
        <center>
            <x-m>-0.02522</x-m>
            <y-m>0</y-m>
            <z-m>0.0</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>

</PropertyList>
