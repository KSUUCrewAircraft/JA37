<?xml version="1.0"?>
<PropertyList>
    <path>augStage.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>Mount</object-name>
    </effect>

    <animation>
        <type>pick</type>
        <object-name>Mount</object-name>
        <object-name>Number1</object-name>
        <object-name>Number2</object-name>
        <object-name>Number3</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/dc-voltage</property>
                <value>23</value>
            </greater-than>
        </condition>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>augStage</tooltip-id>
                <label>Commanded afterburner zone</label>
            </binding>
        </hovered>
    </animation>


    <!-- lighting -->
    <animation>
        <object-name>Number1</object-name>
        <type>material</type>
        <condition>
            <or>
                <equals>
                    <property>fdm/jsbsim/propulsion/engine/zone</property>
                    <value>1</value>
                </equals>
                <equals>
                    <property>fdm/jsbsim/propulsion/engine/zone</property>
                    <value>2</value>
                </equals>
                <equals>
                    <property>fdm/jsbsim/propulsion/engine/zone</property>
                    <value>3</value>
                </equals>
            </or>
            <greater-than>
                <property>systems/electrical/outputs/dc-voltage</property>
                <value>23</value>
            </greater-than>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
    </animation>

    <animation>
        <object-name>Number2</object-name>
        <type>material</type>
        <condition>
            <or>
                <equals>
                    <property>fdm/jsbsim/propulsion/engine/zone</property>
                    <value>2</value>
                </equals>
                <equals>
                    <property>fdm/jsbsim/propulsion/engine/zone</property>
                    <value>3</value>
                </equals>
            </or>
            <greater-than>
                <property>systems/electrical/outputs/dc-voltage</property>
                <value>23</value>
            </greater-than>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
    </animation>

    <animation>
        <object-name>Number3</object-name>
        <type>material</type>
        <condition>
            <equals>
                <property>fdm/jsbsim/propulsion/engine/zone</property>
                <value>3</value>
            </equals>
            <greater-than>
                <property>systems/electrical/outputs/dc-voltage</property>
                <value>23</value>
            </greater-than>
        </condition>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>systems/electrical/dc-light</factor-prop>
        </emission>
    </animation>

</PropertyList>
