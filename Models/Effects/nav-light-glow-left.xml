<?xml version="1.0"?>


<PropertyList>

  <path>nav-light-glow-red.ac</path>

  <!-- Left (red) nav light -->

  <offsets>
    <x-m> 5.65783</x-m>
    <y-m> -5.09762</y-m>
    <z-m> -0.3954</z-m>
  </offsets>

  <!-- Special Shaders -->

  <animation>
    <type>noshadow</type>
    <object-name>LightNavGlowL</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>LightNavGlowL</object-name>
  </effect>

  <!-- Animations -->

 <animation>
  <type>dist-scale</type>
  <object-name>LightNavGlowL</object-name>
  <interpolation>
   <entry><ind>0</ind><dep>1.0</dep></entry>
   <entry><ind>5000</ind><dep>50.0</dep></entry>
  </interpolation>
 </animation>

  <animation>
    <type>scale</type>
    <object-name>LightNavGlowL</object-name>
    <property>/sim/time/sun-angle-rad</property>
    <x-min>0.050</x-min>
    <y-min>0.050</y-min>
    <z-min>0.050</z-min>
    <x-offset>-1</x-offset>
    <y-offset>-1</y-offset>
    <z-offset>-1</z-offset>
    <x-factor>1</x-factor>
    <y-factor>1</y-factor>
    <z-factor>1</z-factor>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LightNavGlowL</object-name>
    <condition>
      <or><!-- nav: bit 3 -->
        <equals>
          <property>sim/multiplay/generic/int[9]</property>
          <value>4</value>
        </equals>
        <equals>
          <property>sim/multiplay/generic/int[9]</property>
          <value>5</value>
        </equals>
        <equals>
          <property>sim/multiplay/generic/int[9]</property>
          <value>6</value>
        </equals>            
        <equals>
          <property>sim/multiplay/generic/int[9]</property>
          <value>7</value>
        </equals>       
      </or>
      <property>sim/multiplay/generic/int[2]</property><!-- fdm/jsbsim/fcs/wings/serviceable -->
    </condition>
  </animation>

  <animation>
    <type>flash</type>
    <object-name>LightNavGlowL</object-name>
    <center>
     <x> 5.65783</x>
    <y> -5.09762</y>
    <z> -0.3954</z>
    </center>
    <axis>
     <x>-1</x>
     <y>-1</y>
     <z>0</z>
    </axis>
    <power>4</power>
    <factor>1</factor>
    <offset>0.4</offset>
    <two-sides type="bool">false</two-sides>
    <min>0.01</min>
    <max>1</max>
  </animation>

</PropertyList>

