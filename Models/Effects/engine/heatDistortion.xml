<?xml version="1.0"?>

<PropertyList>
  <nopreview/>

   <name>HeatDistortion</name>
   <path>heatDistortion.ac</path>

   <offsets> 
    <x-m>0</x-m>
    <y-m>0</y-m>
    <z-m>0</z-m>
    <heading-deg>0</heading-deg>
   </offsets>
   
  <effect>
   <inherits-from>heatDistortion</inherits-from>
   <object-name>Bounding_box</object-name>
  </effect>

  <animation>
    <type>select</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <condition>
     <property>sim/multiplay/generic/int[3]</property><!-- engines/engine[0]/running -->
     <not>
      <property>sim/multiplay/generic/int[8]</property><!-- engines/engine[0]/reversed -->
     </not>
    </condition>
  </animation>

  <animation>
    <type>scale</type>
    <object-name>Bounding_box</object-name>
    <nopreview/>
    <property>sim/multiplay/generic/float[16]</property><!-- thrust -->
    <x-min>0</x-min>
    <y-min>1</y-min>
    <z-min>1</z-min>
    <x-max>1</x-max>
    <y-max>1</y-max>
    <z-max>1</z-max>
    <x-factor>0.0004</x-factor>
    <y-factor>0.0004</y-factor>
    <z-factor>0.0004</z-factor>
  </animation>

</PropertyList>
